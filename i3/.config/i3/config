# Pulse Audio controls
#bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5% #increase sound volume
#bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioRaiseVolume exec $HOME/.config/i3/scripts/volume.sh +2% nosound
bindsym XF86AudioLowerVolume exec $HOME/.config/i3/scripts/volume.sh -2% nosound

#bindsym XF86AudioMute exec pactl set-sink-mute 2 toggle # mute sound
#bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle
bindsym XF86AudioMute exec $HOME/.config/i3/scripts/volume.sh mute
bindsym XF86AudioMicMute exec "pactl set-source-mute 0 toggle; pactl set-source-mute 1 toggle; pactl set-source-mute 2 toggle"

# Sreen brightness controls
