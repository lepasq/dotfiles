    font pango:Ubuntu Mono, Font Awesome 5 Free, PowerlineSymbols
    position bottom
    status_command /bin/i3status-rs $HOME/.config/i3/status.toml
    colors {
        separator #666666
        background $bg

		focused_workspace  $c1 $c1 #FFFFFF
		active_workspace   $c2 $c2 #FFFFFF
		inactive_workspace #423e3b #423e3b #FFFFFF
        urgent_workspace $c3 $c3 #ffffff
    }
}

bindsym $mod+r mode "resize"

